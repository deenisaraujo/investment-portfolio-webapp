                    </div>
                </div>
                <div class="col-md-1 mt-5 pt-4" style="margin-left: -252px;">
                    <div class="col-md-1 align-self-end">
                        <div id="c-loader" class="c-loader d-none"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="container-fluid table-overflow">
                    <table id="tbProdutos" class="x-table x-table--buy w-100" aria-describedby="titleScreen" style="margin-top: 55px!important;">
                        <thead>
                            <tr class="x-table-light">
                                <th class="x-table__title">IdProduto</th>
                                <th class="x-table__title">Ativo</th>
                                <th class="x-table__title">Produto</th>
                                <th class="x-table__title">Titulo</th>
                                <th class="x-table__title">Negociacao</th>
                                <th class="x-table__title">Quantidade</th>
                                <th class="x-table__title">Preco</th>
                                <th class="x-table__title">Email Adm</th>
                                <th class="x-table__title">Atualização</th>
                                <th class="x-table__title">Vencimento</th>
                                <th class="x-table__title">Editar/Excluir</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </section>
