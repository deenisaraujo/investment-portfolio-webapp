        <div class="row">
            <div class="col-md-7">
                <h2 class="header-title mt-5">
                    Gestão de Produtos
                </h2>
            </div>
            <div class="col-md-5 mt-5">
                <a href="@Url.Action("CadastrarEditarProduto", "GestaoProdutos")" id="adicionarProdutos" class="style-button" title="Adicionar Novo Produtos">Adicionar Novo Produto</a>
            </div>
        </div>
        <div>
            <div class="row">
                <div class="col-md-3 mt-4">
                    <div class="form-group">
                        <label class="col-form-label-xl">Nome do produto</label>
                        <input type="text" id="idNomeProduto" name="txtNomeProduto" place title="preencha o nome do produto">
                    </div>
                </div>
                <div class="col-md-1 mt-5 pt-5">
                    <div class="col-md-1 align-self-end">
                        <a href="#" class="style-button" style="padding: 6px 33px !important;background-color: #000!important;color:#fff!important;" onclick="BuscarListaProduto()">Buscar</a>
                    </div>
                </div>
                <div class="col-md-5 mt-5 pt-4">
                    <div class="col-md-3 align-self-end">
