<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalExcluir" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #000;color: #ffffff;">
                <h1 class="modal-title" id="modalTitle" style="font-size: 2.0em; margin-bottom: 0;line-height: 1.5;"></h1>
                <button type="button" class="close modalBtnClose" data-dismiss="modal" aria-label="fechar" style="color: #ffffff;">
                    <span aria-hidden="true" style="font-size: 32px;background-color: #000;">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody"></div>
            <div id="errorModal" style=" display: none; font-size: 12px; text-align: end; padding: 0 10px 10px 0;">
                <span id="errorMsg" style="color: red;"></span>
            </div>
            <div id="returnModal" style=" display: none; font-size: 12px; text-align: end; padding: 0 10px 10px 0;">
                <span id="returnMsg"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="mx-4" id="modalBtnComprar" onclick="ConfirmarCompraVenda(0)" style="font-size: 12px;background-color:seagreen; color:white">Comprar</button>
                <button type="button" id="modalBtnVender" data-dismiss="modal" onclick="ConfirmarCompraVenda(1)" style="font-size: 12px;background-color:red; color:white">Vender</button>
            </div>
        </div>
    </div>
</div>